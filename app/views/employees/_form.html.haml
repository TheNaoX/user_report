  = f.label :lastname
  = f.text_field :lastname 
  %br
  = f.label :account_number
  = f.text_field :account_number
  %br
  = f.label :rate
  = f.text_field :rate
  %br
  = f.label :hours_week
  = f.text_field :hours_week
  %br
  = f.label :worked_hours
  = f.text_field :worked_hours
  %br
  = f.submit
